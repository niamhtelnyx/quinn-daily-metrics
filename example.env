# =============================================================================
# my-agentic-serviceservice-order-specialist Environment Configuration
# =============================================================================
# Copy this file to local.env and adjust values for your environment.
# Variables use nested delimiter "__" (double underscore) for Pydantic Settings.

# =============================================================================
# Application Settings
# =============================================================================

# HTTP server binding
APP_HTTP__HOST=0.0.0.0
APP_HTTP__URL=http://localhost
APP_HTTP__PORT=8000

# Logging: DEBUG, INFO, WARNING, ERROR
APP_HTTP__LOG_LEVEL=INFO

# =============================================================================
# Database Settings
# =============================================================================

# Primary database (read/write)
PRIMARY_DB__HOST=127.0.0.1
PRIMARY_DB__PORT=5432
PRIMARY_DB__USER=postgres
PRIMARY_DB__PASSWORD=postgres
PRIMARY_DB__DATABASE=my_agentic_serviceservice_order_specialist

# Replica database (read-only, can point to same as primary for local dev)
REPLICA_DB__HOST=127.0.0.1
REPLICA_DB__PORT=5432
REPLICA_DB__USER=postgres
REPLICA_DB__PASSWORD=postgres
REPLICA_DB__DATABASE=my_agentic_serviceservice_order_specialist

# =============================================================================
# Observability
# =============================================================================

# Bugsnag error tracking
BUGSNAG__API_KEY=your-bugsnag-api-key
BUGSNAG__RELEASE_STAGE=local

# OpenTelemetry tracing (Phoenix UI at http://localhost:6006)
OPENTELEMETRY__ENABLED=true
OPENTELEMETRY__HOST=localhost
OPENTELEMETRY__PORT=4317
OPENTELEMETRY__EXCLUDED_URLS="metrics,health,info,a2a"

# =============================================================================
# LLM Configuration
# =============================================================================

# LiteLLM proxy for LLM access (abstracts OpenAI, Anthropic, etc.)
LITELLM__PROXY_API_KEY=your-litellm-api-key
LITELLM__PROXY_API_BASE=http://litellm-aiswe.query.prod.telnyx.io:4000/v1

# =============================================================================
# A2A (Agent-to-Agent) Protocol
# =============================================================================

# Path prefix for A2A endpoints (full URL derived from APP_HTTP__URL:APP_HTTP__PORT)
A2A__PATH=/a2a
A2A__PROTOCOL_VERSION=0.3.0
A2A__AGENT_CARD_PATH=.well-known/agent-card.json

# =============================================================================
# Agent Registry
# =============================================================================

# External agent registry for discovery (leave URL empty to disable)
AGENT_REGISTRY__URL=
AGENT_REGISTRY__ENABLED=false

# MCP servers for agents
# E.g. '[{"url":"http://telnyx-mcp-proxy.query.prod.telnyx.io:8000/aida-specialized-knowledge/mcp/","prefix":"knowledge"}]'
AGENTS_MCP__KNOWLEDGE='[]'
